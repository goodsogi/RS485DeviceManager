<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >

    <LinearLayout
        android:id="@+id/bottombtn_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/bottom_linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|bottom"
            android:orientation="horizontal"
            android:background="@drawable/bg_bottom_01" >

            <Button
                android:id="@+id/btn_prev"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/prev_btn_selector"
                android:gravity="center"
                android:text="@string/BTN_PREV"
                android:textColor="#ffffff"
                android:textSize="34sp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="1313dp" />
            
            <Button
                android:id="@+id/btn_next"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/next_btn_selector"
                android:gravity="center"
                android:text="@string/BTN_NEXT"
                android:textColor="#ffffff"
                android:textSize="34sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>