<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_02"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linear_pagenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45px"
            android:orientation="vertical"
            android:paddingTop="3dp" >

            <TextView
                android:id="@+id/text_highlight"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#ffffff"
                android:textSize="22dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45px"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/step_1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/STEP_DONGHO"
                android:textColor="#93d700"
                android:textSize="13dp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/history_arrow" />"

            <TextView
                android:id="@+id/step_2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/STEP_NETWORK"
                android:textColor="#93d700"
                android:textSize="13dp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/history_arrow" />

            <TextView
                android:id="@+id/step_3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/STEP_SERVERS"
                android:textColor="#93d700"
                android:textSize="13dp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/history_arrow" />

            <TextView
                android:id="@+id/step_4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/STEP_SUBPHONE"
                android:textColor="#93d700"
                android:textSize="13dp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/history_arrow" />

            <TextView
                android:id="@+id/step_5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/STEP_SENSOR"
                android:textColor="#93d700"
                android:textSize="13dp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/history_arrow" />

            <TextView
                android:id="@+id/step_6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/STEP_SENSORTEST"
                android:textColor="#93d700"
                android:textSize="13dp" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/history_arrow" />

            <TextView
                android:id="@+id/step_7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/STEP_COMPLETE"
                android:textColor="#93d700"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>